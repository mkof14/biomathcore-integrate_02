{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noUncheckedIndexedAccess": false,
    "types": [
      "node"
    ],
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/_backup/**",
    "**/*.broken.*",
    "**/_backup/**",
    "**/*.broken.*",
    "**/__tests__/**",
    "**/tests/**",
    "**/*.test.*",
    "biomathcore-jules/**",
    "_backup_member_q/**",
    "src/_frozen/**"
  ]
}
