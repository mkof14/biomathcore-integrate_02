#!/usr/bin/env sh
# Safe guard if helper missing
[ -f "$(dirname "$0")/_/husky.sh" ] && . "$(dirname "$0")/_/husky.sh"

# Global toggles
[ "$HUSKY" = "0" ] && exit 0
[ "$SKIP_HUSKY" = "1" ] && exit 0

BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo "")"
case "$BRANCH" in
  ts-scope-*) exit 0 ;;  # skip hooks on our TS sandbox branches
esac

# place your real checks here
exit 0
