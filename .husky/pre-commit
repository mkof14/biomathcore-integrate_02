#!/usr/bin/env sh

# Глобальные выключатели
[ "$HUSKY" = "0" ] && exit 0
[ "$SKIP_HUSKY" = "1" ] && exit 0

# Пропустить проверки на песочницах TS
BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo "")"
case "$BRANCH" in
  ts-scope-*) exit 0 ;;
esac

# --- реальные проверки ниже (пока none) ---
exit 0
